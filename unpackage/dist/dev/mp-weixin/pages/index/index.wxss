
.content {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.title{
	font-size: 30rpx;
	font-weight: bold;
	margin-top: 10rpx;
}
.banner-image{
	margin-top: 20rpx;
	margin-bottom: 20rpx;
	width: 95%;
	border-radius:0 0 50rpx 50rpx;
}
.input{
	background-color: #f7f7f7;
	border-radius: 10rpx;
	padding: 20rpx;
}
.title-name{
	padding: 15rpx 0;
}
.active {
	font-weight: bold;
	color: #007AFF;
}
.titleBottom{
	margin: 0 auto;
	width: 60%;
	border-bottom: 5rpx solid #007AFF;
}
.s-head{
	flex: 1;
}
.s-head-img{
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
}
.s-detail{
	flex: 3;
}

